<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Vegetables</title>
    <style>
    body {
        font-family: 'Book Antiqua',serif;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .flours-container {
        width: 90%;
        margin: 0 auto; 
    }

    .row {
        display: flex;
        flex-wrap: wrap; 
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .row:last-child {
        justify-content: flex-start;
    }

    .card {
        flex: 1; 
        min-width: 23%;
        max-width: 23%; 
        margin: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .card-image {
        max-width: 100%;
        width: 200px;
        height: 200px;
        border-radius: 8px;
    }

    .card-content {
        margin-top: 10px;
    }

    .card-title {
        font-size: 1.2rem;
        margin-bottom: 10px;
    }

    .card-price {
        font-size: 18px;
        font-weight: bold;
        color: #1d1d1d; 
        margin-bottom: 10px;
    }

    .quantity-add {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-quantity {
        font-size: 17px;
        color: #555; 
        margin-bottom: 5px;
    }


    .quantity-input {
        width: 50px;
        height: 30px;
        border: 2px solid #1d1d1d;
        border-radius: 10px;
        margin-right: 10px;
    }

    button {
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 5px 10px;
        cursor: pointer;
    }

    button:hover {
        background-color: #218838;
    }

    </style>
</head>

<body>
    <%- include('navbar') %>

    <h1>Flours</h1>

    <div class="flours-container">
        <% flours.forEach((flour, index) => { %>
            <% if (index % 4 === 0) { %>
            <div class="row">
            <% } %>

                <div class="card">
                    <img src="<%= flour.imageUrl %>" alt="<%= flour.name %>" class="card-image">
                    <div class="card-content">
                        <h2 class="card-title"><%= flour.name %></h2>
                        <p class="card-quantity">quantity : <%= flour.quantity %></p>
                        <p class="card-price">Price: Rs <%= flour.price.toFixed(2) %></p>
                        <div class="quantity-add">
                            <input type="number" id="quantity_<%= flour._id %>" class="quantity-input" value="1" min="1" oninput="validateQuantity(this)">
                            <button onclick="addToCart('<%= flour._id %>')">Add</button>
                        </div>
                    </div>
                </div>
            <% if ((index + 1) % 4 === 0) { %>
            </div>
            <% } %>
        <% }); %>
        <% if (flours.length % 4 !== 0) { %>
            </div>
        <% } %>
    </div>

    <script>
        function addToCart(flourid) {
            const quantity = document.getElementById(`quantity_${flourid}`).value;
            
            console.log(`Adding ${quantity} units of vegetable ID ${flourid} to the cart.`);
        }
        function validateQuantity(inputElement) {
            if (inputElement.value < inputElement.min) {
                inputElement.value = inputElement.min;
            }
        }

    </script>
</body>

</html>
