<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/css/login.css" />
		<title>Login page</title>
	</head>
	<body>
		<div class="login-form">
			<h2>Login</h2>
			<% if(signupstatus) { %>
				<p style="color: green;"> User signup succesfull ! </p>
			<% } %>
			<% if(loginerror) { %>
				<p style="color: red;"> invalid credintials ! </p>
			<% } %>
			<form action="/login" method="post">
				<div class="input-box">
					<label for="email">email</label>
					<input
						type="email"
						name="email"
						id="email"
						placeholder="Enter your email"
						required
					/>
				</div>
				<div class="input-box">
					<label for="password">Password</label>
					<input
						type="password"
						name="password"
						id="password"
						placeholder="Enter your password"
						required
					/>
				</div>
				<div class="input-box button">
					<input type="submit" value="Login" />
				</div>
			</form>
		</div>

		<script>
			function validateForm() {
				// Get form input values
				const email = document.getElementById("email").value;
				const password = document.getElementById("password").value;

				const loginFailed = true;

				// Display error message if login failed
				const loginErrorElement = document.getElementById("login-error");
				if (loginFailed) {
					loginErrorElement.textContent = "Invalid email or password";
					return false;
				} else {
					loginErrorElement.textContent = ""; // Clear error message if login successful

					window.location.href = "/dashboard";
				}
			}

			function togglePasswordVisibility(inputId) {
				const passwordInput = document.getElementById(inputId);
				const toggleIcon = passwordInput.nextElementSibling;
				if (passwordInput.type === "password") {
					passwordInput.type = "text";
					toggleIcon.innerHTML =
						'<img src="/images/eye-icon.png" alt="Hide password">';
				} else {
					passwordInput.type = "password";
					toggleIcon.innerHTML =
						'<img src="/images/eye-slash-icon.png" alt="Show password">';
				}
			}
		</script>
	</body>
</html>
