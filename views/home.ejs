<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Home</title>
<style>
    /* General styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        text-align: center;
        position: relative;
    }

    /* Slider container styles */
    .slider-container {
        position: relative;
        margin-top: 50px;
    }

    /* Image slider styles */
    .image-slider {
        position: relative;
        width: 100%;
        height: 300px;
        overflow: hidden;
    }

    .image-slider img {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: auto;
        opacity: 0;
        transition: opacity 0.5s ease;
    }

    .image-slider img.active {
        opacity: 1;
    }

    /* Quote slider styles */
    .quote-slider {
        position: relative;
        width: 100%;
        overflow: hidden;
        margin-top: 20px;
        background-color: #f9f9f9; /* Background color for quote slider */
        padding: 20px; /* Padding for quote slider content */
    }

    .quote-slider .quote {
        display: none;
    }

    .quote-slider .quote.active {
        display: block;
    }

    .quote-slider p {
        font-size: 18px;
        margin: 0 0 10px;
        font-style: italic;
    }

    /* Slider controls */
    .slider-control {
        cursor: pointer;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: #fff;
        padding: 10px;
        border: none;
        z-index: 1;
        font-size: 20px;
    }

    .slider-prev {
        left: 10px;
    }

    .slider-next {
        right: 10px;
    }
</style>
</head>
<body>
<%- include('navbar')%>
<div class="container">
    <!-- Slider Container -->
    <div class="slider-container">
        <!-- Image Slider -->
        <div class="image-slider">
            <img src="/images/img1.png" alt="Slide 1" class="active">
            <img src="https://newyorkcity.kitchen/wp-content/uploads/2022/03/Screen-Shot-2022-03-10-at-5.46.26-PM.png" alt="Slide 2">
            <img src="/images/img3.png" alt="Slide 3">
            <button class="slider-control slider-prev" onclick="changeSlide(-1)">❮</button>
            <button class="slider-control slider-next" onclick="changeSlide(1)">❯</button>
        </div>

        <!-- Quote Slider -->
        <div class="quote-slider">
            <div class="quote active">
                <p><strong>" A grocery delivery service that doesn’t hurt your wallet. "</strong></p>
            </div>
            <div class="quote">
                <p><strong>" Your grocery needs are our desire " </strong></p>
            </div>
            <div class="quote">
                <p><strong>" Ran out of ingredients? Leave it to us " </strong></p>
            </div>
        </div>
    </div>
</div>

<script>
    let currentSlideIndex = 0;
    const slides = document.querySelectorAll('.image-slider img');

    function showSlide(n) {
        slides.forEach(slide => {
            slide.classList.remove('active');
        });

        currentSlideIndex = (currentSlideIndex + n + slides.length) % slides.length;
        slides[currentSlideIndex].classList.add('active');
        showQuote(currentSlideIndex);
    }

    function changeSlide(n) {
        showSlide(n);
    }

    let currentQuoteIndex = 0;
    const quotes = document.querySelectorAll('.quote-slider .quote');

    function showQuote(n) {
        quotes.forEach(quote => {
            quote.classList.remove('active');
        });

        currentQuoteIndex = (currentQuoteIndex + n + quotes.length) % quotes.length;

        quotes[currentQuoteIndex].classList.add('active');
    }
    setInterval(() => {
        showSlide(1);
    }, 5000); 
</script>
</body>
</html>
