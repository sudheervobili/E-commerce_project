<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<style>
			* {
			padding: 0;
			margin: 0;
			box-sizing: border-box;
			font-family: "Book Antiqua", serif;
		}

		body {
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.main {
			display: flex;
		}

		.login-form {
			max-width: 500px;
			width: 100%;
			padding: 50px;
			border: 2px solid #1D3226;
			border-radius: 50px;
			background-color: white;
			box-shadow: 0 5px 10px rgba(55, 45, 45, 0.2);
			height: 400px;
			display: flex;
			flex-direction: column;
			justify-content: center;
		}

		.login-form h2 {
			font-size: 25px;
			text-align: center;
			font-weight: bold;
			color: #1D3226;
			margin-bottom: 20px;
		}

		.login-form form .input-box {
			width: 400px;
			border-radius: 20px;
			margin-bottom: 20px;
		}

		.login-form form .input-box input {
			width: 100%;
			height: 50px;
			outline: none;
			padding: 0 10px;
			font-size: 16px;
			border: 1px solid #ccc;
			border-radius: 15px;
			transition: border-color 0.3s ease;
		}

		.login-form form .input-box input:focus,
		.login-form form .input-box input:valid {
			border-color: #1D3226;
		}

		.login-form form .input-box.button input {
			height: 35px;
			width: 80%;
			color: white;
			font-weight: bold;
			margin-left: 40px;
			border: none;
			background-color: #1D3226;
			border-radius: 15px;
			cursor: pointer;
			transition: background-color 0.3s ease;
		}

		.login-form form .input-box.button input:hover {
			background: gray;
		}

		form .text h3 {
			color: #333;
			width: 100%;
			text-align: center;
		}

		form .text h3 a {
			color: #1D3226;
			text-decoration: none;
		}

		.login-form form .input-box {
			position: relative;
		}

		.login-form form .input-box .password-input {
			position: relative;
		}

		.login-form form .input-box .toggle-password {
			position: absolute;
			top: 50%;
			transform: translateY(-50%);
			right: 10px;
			cursor: pointer;
		}

		.login-form form .input-box .toggle-password img {
			width: 20px;
			height: auto;
		}

		</style>
		<title>Admin Login</title>
	</head>
	<body>
		<div class="main">
		<div class="login-form">
			<h2>Admin Login</h2>
			<% if(loginerror) { %>
				<p style="color: red;"> invalid credintials ! </p>
			<% } %>
			<form action="/adminlogin" method="post">
				<div class="input-box">
					<input
						type="email"
						name="email"
						id="email"
						placeholder="email"
						required
					/>
				</div>
				<div class="input-box">
					<input
						type="password"
						name="password"
						id="password"
						placeholder="password"
						required
					/>
				</div>
				<div class="input-box button">
					<input type="submit" value="Login" />
				</div>
			</form>
		</div>

		<script>
			function togglePasswordVisibility(inputId) {
				const passwordInput = document.getElementById(inputId);
				const toggleIcon = passwordInput.nextElementSibling;
				if (passwordInput.type === "password") {
					passwordInput.type = "text";
					toggleIcon.innerHTML =
						'<img src="/images/eye-icon.png" alt="Hide password" />';
				} else {
					passwordInput.type = "password";
					toggleIcon.innerHTML =
						'<img src="/images/eye-slash-icon.png" alt="Show password" />';
				}
			}

			function validateForm() {
				return true; 
			}
		</script>
	</body>
</html>
